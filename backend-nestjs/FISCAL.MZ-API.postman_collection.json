{
  "info": {
    "name": "FISCAL.MZ 2.0 API",
    "description": "Collection para testes da API FISCAL.MZ",
    "version": "1.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Seed",
      "item": [
        {
          "name": "Seed All",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{base_url}}/seed/all",
              "host": ["{{base_url}}"],
              "path": ["seed", "all"]
            }
          }
        }
      ]
    },
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@abc.co.mz\",\n  \"password\": \"admin123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"nova@empresa.co.mz\",\n  \"password\": \"senha123\",\n  \"nome\": \"João Silva\",\n  \"nomeEmpresa\": \"Nova Empresa, Lda\",\n  \"nuit\": \"400999888\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/register",
              "host": ["{{base_url}}"],
              "path": ["auth", "register"]
            }
          }
        }
      ]
    },
    {
      "name": "Workflow",
      "item": [
        {
          "name": "Criar Cotação",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"entidadeId\": \"{{entidade_id}}\",\n  \"itens\": [\n    {\n      \"descricao\": \"Consultoria Fiscal\",\n      \"quantidade\": 10,\n      \"precoUnitario\": 5000,\n      \"taxaIva\": 16\n    }\n  ],\n  \"observacoes\": \"Cotação para serviços de consultoria\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/workflow/cotacoes",
              "host": ["{{base_url}}"],
              "path": ["workflow", "cotacoes"]
            }
          }
        },
        {
          "name": "Aceitar Cotação",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token_cliente}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/workflow/cotacoes/{{cotacao_id}}/aceitar",
              "host": ["{{base_url}}"],
              "path": ["workflow", "cotacoes", "{{cotacao_id}}", "aceitar"]
            }
          }
        },
        {
          "name": "Pagar Proforma",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"metodo\": \"MPESA\",\n  \"referencia\": \"MP123456789\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/workflow/proformas/{{proforma_id}}/pagar",
              "host": ["{{base_url}}"],
              "path": ["workflow", "proformas", "{{proforma_id}}", "pagar"]
            }
          }
        },
        {
          "name": "Listar Cotações",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/workflow/cotacoes?tipo=enviadas",
              "host": ["{{base_url}}"],
              "path": ["workflow", "cotacoes"],
              "query": [
                {
                  "key": "tipo",
                  "value": "enviadas"
                }
              ]
            }
          }
        },
        {
          "name": "Dashboard Stats",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/workflow/dashboard/stats",
              "host": ["{{base_url}}"],
              "path": ["workflow", "dashboard", "stats"]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000"
    },
    {
      "key": "token",
      "value": ""
    },
    {
      "key": "token_cliente",
      "value": ""
    },
    {
      "key": "entidade_id",
      "value": ""
    },
    {
      "key": "cotacao_id",
      "value": ""
    },
    {
      "key": "proforma_id",
      "value": ""
    }
  ]
}
